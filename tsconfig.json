{
  "compilerOptions": {
    "target": "es2019",                         
   
    "module": "commonjs",                              
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,           

    "strict": true,                                      
    "skipLibCheck": true,
    "modeuleResolution": "node",
    "rootDir": "src",
    "typeRoots": [
      "./src/@types", 
      "./node_modules/@types"
    ],
    "outDir":"./dist",
    "removeComments":true,

  }
}